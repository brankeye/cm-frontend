<?xml version="1.0" encoding="utf-8" ?>
<base:ContentCore xmlns="http://xamarin.com/schemas/2014/forms"
           xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
           xmlns:controls="clr-namespace:cm.frontend.core.Phone.Views.Controls;assembly=cm.frontend.core.Phone"
           xmlns:converters="clr-namespace:cm.frontend.core.Domain.Utilities.Converters;assembly=cm.frontend.core.Domain"
           xmlns:base="clr-namespace:cm.frontend.core.Phone.Views.Pages.Base;assembly=cm.frontend.core.Phone"
           xmlns:pages="clr-namespace:cm.frontend.core.Phone.ViewModels.Pages;assembly=cm.frontend.core.Phone"
           x:TypeArguments="pages:Calendar" 
           x:Class="cm.frontend.core.Phone.Views.Pages.Calendar"
           Title="My classes">
  <ContentPage.Content>
    <StackLayout>
      <controls:PrettyListView ItemsSource="{Binding ClassesList}" Header="{Binding .}" ItemSelected="ClassesListView_OnItemSelected" HasUnevenRows="True" IsPullToRefreshEnabled="False" QuickSelect="True">
        <controls:PrettyListView.ItemTemplate>
          <DataTemplate>
            <ViewCell>
              <StackLayout Padding="15,8,15,8">
                <StackLayout Orientation="Horizontal">
                  <Label Text="{Binding ClassModel.Name}" VerticalTextAlignment="Center" TextColor="#80CBC4"></Label>
                  <Label Text="(Canceled)" VerticalTextAlignment="Center" TextColor="#80CBC4" IsVisible="{Binding IsCanceled}"></Label>
                </StackLayout>
                <Label Text="{Binding Date, Converter={x:StaticResource ToDateTime}, StringFormat='{0:dddd, MMMM d, yyyy}'}" VerticalTextAlignment="Center"></Label>
              </StackLayout>
            </ViewCell>
          </DataTemplate>
        </controls:PrettyListView.ItemTemplate>
        <controls:PrettyListView.HeaderTemplate>
          <DataTemplate>
            <ContentView Padding="15">
              <DatePicker Format="dddd, MMMM d, yyyy" Date="{Binding SelectedDate, Mode=OneWayToSource, Converter={x:StaticResource ToDateTime}}" VerticalOptions="Center"></DatePicker>
            </ContentView>
          </DataTemplate>
        </controls:PrettyListView.HeaderTemplate>
      </controls:PrettyListView>
    </StackLayout>
  </ContentPage.Content>
  <ContentPage.Resources>
    <ResourceDictionary>
      <converters:ToDateTime x:Key="ToDateTime"></converters:ToDateTime>
    </ResourceDictionary>
  </ContentPage.Resources>
</base:ContentCore>