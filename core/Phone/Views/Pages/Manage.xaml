<?xml version="1.0" encoding="utf-8" ?>
<base:Core xmlns="http://xamarin.com/schemas/2014/forms"
           xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
           x:Class="cm.frontend.core.Phone.Views.Pages.Manage"
           xmlns:base="clr-namespace:cm.frontend.core.Phone.Views.Pages.Base;assembly=cm.frontend.core.Phone"
           xmlns:pages="clr-namespace:cm.frontend.core.Phone.ViewModels.Pages;assembly=cm.frontend.core.Phone"
           x:TypeArguments="pages:Manage">
  <ContentPage.Content>
    <StackLayout>
      <Entry Text="{Binding SchoolName, Mode=OneWayToSource}" Placeholder="School name"></Entry>
      <StackLayout Orientation="Horizontal">
        <Button Text="Join" Command="{Binding JoinCommand}"></Button>
        <Button Text="Manage" Command="{Binding CreateCommand}"></Button>
      </StackLayout>
    </StackLayout>
  </ContentPage.Content>
</base:Core>