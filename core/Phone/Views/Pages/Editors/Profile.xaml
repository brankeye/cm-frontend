<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="cm.frontend.core.Phone.Views.Pages.Editors.Profile"
             Navigation="{Binding Navigation, Mode=OneWayToSource}">
  <ContentPage.Content>
    <StackLayout>
      <Label Text="Edit profile" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"></Label>
      <Entry Placeholder="First name"></Entry>
      <Entry Placeholder="Last name"></Entry>
      <Entry Placeholder="Email"></Entry>
      <Entry Placeholder="Phone number"></Entry>
      <Button Text="Ok" Command="{Binding ActionButtonCommand}" HorizontalOptions="Center"></Button>
    </StackLayout>
  </ContentPage.Content>
</ContentPage>