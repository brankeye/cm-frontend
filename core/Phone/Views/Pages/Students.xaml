<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:cm.frontend.core.Phone.Views.Controls;assembly=cm.frontend.core.Phone"
             x:Class="cm.frontend.core.Phone.Views.Pages.Students"
             Navigation="{Binding Navigation, Mode=OneWayToSource}">
  <ContentPage.Content>
    <controls:PrettyListView ItemsSource="{Binding StudentsList}" ItemSelected="StudentsListView_OnItemSelected" HasUnevenRows="False" IsPullToRefreshEnabled="False" QuickSelect="True">
      <controls:PrettyListView.ItemTemplate>
        <DataTemplate>
          <TextCell Text="{Binding StudentModel.FullName}"></TextCell>
        </DataTemplate>
      </controls:PrettyListView.ItemTemplate>
      <controls:PrettyListView.Header>
        <Label Text="Students"></Label>
      </controls:PrettyListView.Header>
    </controls:PrettyListView>
  </ContentPage.Content>
</ContentPage>